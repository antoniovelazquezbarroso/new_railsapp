default: &default
  adapter: postgresql
  encoding: unicode
  pool: 5

development:
  <<: *default
  database: myticketee_pg_development

test:
  <<: *default
  database: myticketee_pg_test

production:
  <<: *default
  database: <%= Rails.application.credentials.db_database_name %>
  username: <%= Rails.application.credentials.db_username %>
  password: <%= Rails.application.credentials.db_password %>
  host: "{{ groups['db'][0] }}"
  port: 5432
