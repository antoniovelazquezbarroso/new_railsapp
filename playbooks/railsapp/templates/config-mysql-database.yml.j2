default: &default
  adapter: mysql2
  encoding: utf8
  pool: 5
  username: root                        # Ubuntu 14.04 and Mac Desktop
  password: root                        # Ubuntu 14.04
#  socket: /var/run/mysqld/mysqld.sock   # Ubuntu 14.04
#  password:                            # Mac Desktop
#  socket: /tmp/mysql.sock              # Mac Desktop

development:
  <<: *default
  database: railsapp_development

test:
  <<: *default
  database: railsapp_test

production:
  <<: *default
  database: <%= Rails.application.credentials.db_database_name %>
  username: <%= Rails.application.credentials.db_username %>
  password: <%= Rails.application.credentials.db_password %>
  host: "{{ groups['db'][0] }}"
  port: 3306
